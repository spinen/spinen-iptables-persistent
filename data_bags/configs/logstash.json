{
    "id": "logstash",
    "inputs": {
    	"apache2": {
            "path": [
                "/var/log/apache2/*.log"
            ],
            "tags": [
                "apache2"
            ],
            "type": "apache2"
        },
        "apt": {
            "path": [
                "/var/log/apt/*.log"
            ],
            "tags": [
                "apt"
            ],
            "type": "apt"
        },
    	"auth": {
            "path": [
                "/var/log/auth.log"
            ],
            "tags": [
                "auth"
            ],
            "type": "auth"
        },
        "boot": {
            "path": [
                "/var/log/boot.log",
                "/var/log/onboot.log"
            ],
            "tags": [
                "boot"
            ],
            "type": "boot"
        },
        "dpkg": {
            "path": [
                "/var/log/dpkg.log"
            ],
            "tags": [
                "dpkg"
            ],
            "type": "dpkg"
        },
        "ossec": {
            "path": [
                "/var/ossec/logs/alerts.log"
            ],
            "tags": [
                "ossec"
            ],
            "type": "ossec"
        },
        "syslog": {
            "path": [
                "/var/log/sylog"
            ],
            "tags": [
                "syslog" 
            ],
            "type": "syslog"
        },
        "ufw": {
            "path": [
                "/var/log/ufw.log"
            ],
            "tags": [
                "ufw"
            ],
            "type": "ufw"
        },
        "mongo": {
            "path": [
                "/var/log/mongodb/mongodb.log"
            ],
            "tags": [
                "mongo"
            ],
            "type": "mongo"
        },
        "unknowns": {
            "path": [
                "/var/log/alternatives.log",
                "/var/log/cloud-init.log",
                "/var/log/ConsoleKit/*.log",
                "/var/log/fontconfig.log",
                "/var/log/fsck/*.log",
                "/var/log/kern.log",
                "/var/log/landscape/*.log",
                "/var/log/mail.log",
                "/var/log/news/*.log",
                "/var/log/unattended-upgrades/*.log"
            ],
            "tags": [
                "unknowns"
            ],
            "type": "syslog"
        }   
    }
}
